# makedefs variant for SunOS
#
# RCS $Revision: 1.1.12.1 $
# Checkin $Date: 1998/02/25 17:36:21 $
# Revising $Author: dbrooke $
#
# Set ENDIAN to b or l as required.
# Set INTERWORK to "INTERWORK" or "NOINTERWORK" (case sensitive)
ENDIAN=l
INTERWORK=INTERWORK

# Set ARMTOOLS if the ARM tools are not available on your PATH
# NB: Leave a trailing directory separator at the end
ARMTOOLS=

CC=$(ARMTOOLS)tcc
LD=$(ARMTOOLS)armlink
AS=$(ARMTOOLS)tasm
ARMLIB=$(ARMTOOLS)armlib

MKTMP=mktmp
RM=rm -f
RENAME=mv
APPEND=cat
MAKEMAKE=../util/makemake
DEPLIST=deplist
BAKFILE=MakeFBak
CP=cp

CFLAGS=-$(ENDIAN)i -ffah -apcs 3/$(INTERWORK)/noswst -c -J../../include -I..,../semi,../fplib,../stdh -I../../../fpe400/coresrc -DHOSTSEX_$(ENDIAN) $(CFL) -DEMBEDDED_CLIB -D$(INTERWORK)
DCFLAGS=$(CFLAGS) -M
AFLAGS=-16 -$(ENDIAN)i -apcs 3/noswst -PD 'noswst SETL {TRUE}' -PD 'thumb SETL {TRUE}' -PD '$(INTERWORK) SETL {TRUE}' -PD 'EMBEDDED_CLIB SETL {TRUE}' -I..,../semi,../stdh,../../../fpe400/coresrc $(AFL)
DAFLAGS=$(AFLAGS) -D $(MKTMP)

#.SILENT:
